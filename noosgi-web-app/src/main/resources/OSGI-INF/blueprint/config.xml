<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
           >
  <bean id="HelloWorldServlet"
     class="fi.eis.applications.jboss.poc.webapp.HelloWorldServlet">
     <property name="MessageService" ref="MessageServiceRef"/>
  </bean>
  <reference id="MessageServiceRef" interface="fi.eis.applications.jboss.poc.osgiservice.api.MessageService"/>
  <service id="helloWorldService" ref="HelloWorldServlet" interface=
     "javax.servlet.Servlet" >
    <service-properties>
      <entry key="servlet.name" value="HelloWorldServlet"/>
    </service-properties> 
  </service>     
</blueprint>